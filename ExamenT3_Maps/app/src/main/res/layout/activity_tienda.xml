<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TiendaActivity">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="476dp"
        android:layout_margin="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/ic_launcher_background">

        </ImageView>

        <TextView
            android:id="@+id/tvTienTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="5dp"
            android:text="Titulo"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tvTiednResumen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Resumen"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tvTiendAutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Autor"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/tvTiendFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Fecha"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">


        </LinearLayout>



        <Button
            android:id="@+id/btnMap1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tienda1" />
        <Button
            android:id="@+id/btnMap2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tienda2" />
        <Button
            android:id="@+id/btnMap3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tienda3" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>